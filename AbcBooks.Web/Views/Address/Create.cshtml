@model Address

@{
	ViewData["Title"] = "Create";
}

<h1>Create New Address</h1>
<hr />

<form asp-action="Create" method="post">
	<div class="row">
		<div class="col-12">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input hidden asp-for="ApplicationUserId" />
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="PhoneNumber" class="control-label"></label>
				<input asp-for="PhoneNumber" class="form-control" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="HouseNameOrNumber" class="control-label"></label>
				<input asp-for="HouseNameOrNumber" class="form-control" />
				<span asp-validation-for="HouseNameOrNumber" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="StreetAddress" class="control-label"></label>
				<input asp-for="StreetAddress" class="form-control" />
				<span asp-validation-for="StreetAddress" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="City" class="control-label"></label>
				<input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="District" class="control-label"></label>
				<input asp-for="District" class="form-control" />
				<span asp-validation-for="District" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="PinCode" class="control-label"></label>
				<input asp-for="PinCode" class="form-control" />
				<span asp-validation-for="PinCode" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 mb-4">
			<div class="form-group">
				<label asp-for="State" class="control-label"></label>
				<input asp-for="State" class="form-control" />
				<span asp-validation-for="State" class="text-danger"></span>
			</div>
		</div>
		<div class="col-12 mb-4">
			<label class="form-check-label">
				<input class="form-check-input" asp-for="IsDefault" /> Make Address Default
			</label>
		</div>
		<div class="col-md-6 mb-4">
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary w-100" />
			</div>
		</div>
		<div class="col-md-6 mb-4">
			<a asp-area="Identity" asp-page="/Account/Manage/Addresses" class="btn btn-outline-secondary w-100">Back To Addresses</a>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
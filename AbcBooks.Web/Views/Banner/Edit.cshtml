@model AbcBooks.Models.Banner

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit Banner</h1>
<hr />

<form method="post" enctype="multipart/form-data">
	<div class="text-danger" asp-validation-summary="All"></div>
	<input hidden asp-for="Id" />
	<div class="row">
		<div class="col-12">
			<img src="@Model.ImageUrl" alt="Could not load image" class="w-100 mb-3" />
		</div>
		<div class="col-12 col-md-6 form-group mb-3">
			<label>Add Banner Image</label>
			<input name="formFile" type="file" class="form-control mt-2" />
		</div>
		<div class="col-12 col-md-6 form-group mb-3">
			<label>Add Link</label>
			<input asp-for="Href" type="text" class="form-control mt-2" />
		</div>
		<div class="col-12">
			<div class="row">
				<div class="col-12 col-sm-6 mb-2">
					<button type="submit" class="btn btn-primary w-100">Edit</button>
				</div>
				<div class="col-12 col-sm-6">
					<a class="btn btn-outline-secondary w-100" asp-action="Index">Back To List</a>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
@model int

@{
    ViewData["Title"] = "Order Confirmation";
}


<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Order Placed Successfully!</h1>
        Your Order Number is : @Model <br />
        <a asp-controller="Order" asp-action="Details" asp-route-orderId="@Model">Click here to go to order page</a><br /><br />
        <img src="~/images/success.png" width="200px" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Your order has been placed successfully! <br />
        
    </div>
</div> 
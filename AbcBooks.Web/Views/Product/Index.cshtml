@{
	ViewData["Title"] = "Products";

	var status = Context.Request.Query["status"];

	var listed = "text-primary";
	var unlisted = "text-primary";
	var all = "text-primary";

	switch (status)
	{
		case "listed":
			listed = "active text-white";
			break;
		case "unlisted":
			unlisted = "active text-white";
			break;
		default:
			all = "active text-white";
			break;
	}
}

<div class="p-3">
	<div class="d-flex justify-content-between pt-4">
		<div class="p-2">
			<h1 class="text-dark">Product List</h1>
		</div>
		<div class="p-2">
			<ul class="list-group list-group-horizontal-sm">
				<a style="text-decoration:none;" asp-controller="Product"
				   asp-action="Index" asp-route-status="listed">
				<li class="list-group-item @listed">Listed</li>
				</a>
				<a style="text-decoration:none;" asp-controller="Product"
				   asp-action="Index" asp-route-status="unlisted">
				<li class="list-group-item @unlisted">Unlisted</li>
				</a>
				<a style="text-decoration:none;" asp-controller="Product"
				   asp-action="Index" asp-route-status="all">
				<li class="list-group-item @all">All</li>
				</a>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-12 col-md-3">
			<a asp-action="Create" class="btn btn-primary w-100">Create Product</a>
		</div>
	</div>
	<br /><br />

	<div class="table-scroll">
		<table id="productTable" class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>MRP</th>
					<th>Discount</th>
					<th>Stock</th>
					<th>Category</th>
					<th>Status</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/product.js"></script>
}
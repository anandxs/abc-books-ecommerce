@model AbcBooks.Models.ViewModels.OrderViewModel

@{
	Layout = null;
	int i = 1;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<title>Order Invoice</title>
</head>
<body>
	<div class="container">

		<h1 class="text-center mt-3">INVOICE</h1>

		<div class="d-flex justify-content-between mt-3">

			<div id="shipping-address" style="width:50%">
				<p class="fw-bold"><u>SHIPPING ADDRESS</u></p>
				<P>
					@Model.Order.ShippingAddress.HouseNameOrNumber, <br />
					@Model.Order.ShippingAddress.StreetAddress, <br />
					@Model.Order.ShippingAddress.City, <br />
					@Model.Order.ShippingAddress.District, <br />
					PIN - @Model.Order.ShippingAddress.PinCode, <br />
					@Model.Order.ShippingAddress.State
				</P>
			</div>

			<div id="invoice-headers">
				<p><span class="fw-bold">ORDER DATE</span> : @Model.Order.OrderDate</p>
				<p><span class="fw-bold">PAYMENT METHOD</span> : @Model.Order.PaymentMethod</p>
			</div>

		</div>

		<table id="order-table" class="table mt-3">
			<thead class="bg-secondary text-light">
				<tr>
					<th>Sl. no.</th>
					<th>Item</th>
					<th>Quantity</th>
					<th>Price</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.OrderDetails)
				{
					<tr>
						<td>@i</td>
						<td>@item.Product.Title</td>
						<td>@item.Quantity</td>
						<td>@item.Price.ToString("c")</td>
					</tr>

					i++;
				}
				<tr>
					<td class="text-end fw-bold" colspan="3">Total</td>
					<td class="fw-bold">@Model.Order.OrderTotal.ToString("c")</td>
				</tr>
			</tbody>
		</table>

		<p class="text-center mt-5"><i>Thank you for your business!</i></p>

	</div>

</body>
</html>

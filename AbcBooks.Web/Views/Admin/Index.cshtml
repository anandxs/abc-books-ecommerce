@model Dashboard;

@{
	ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>
<hr />

<div class="row mt-3 mb-5">
	<div class="col-12 col-sm-6 col-md-3 p-2">
		<div class="info-card bg-success d-flex flex-column justify-content-center align-items-center">
			<h2 class="text-light">Total Revenue</h2>
			<h3 class="text-light">@(Model.TotalRevenue.ToString("c"))</h3>
		</div>
	</div>
	<div class="col-12 col-sm-6 col-md-3 p-2">
		<div class="info-card bg-info d-flex flex-column justify-content-center align-items-center">
			<h2 class="text-light">Low Stock</h2>
			<h3 class="text-light">@Model.LowStock item(s)</h3>
		</div>
	</div>
	<div class="col-12 col-sm-6 col-md-3 p-2">
		<div class="info-card bg-danger d-flex flex-column justify-content-center align-items-center">
			<h2 class="text-light">Blocked Users</h2>
			<h3 class="text-light">@Model.BlockedUsers</h3>
		</div>
	</div>
	<div class="col-12 col-sm-6 col-md-3 p-2">
		<div class="info-card bg-dark d-flex flex-column justify-content-center align-items-center">
			<h2 class="text-light">Pending Orders</h2>
			<h3 class="text-light">@Model.PendingOrders</h3>
		</div>
	</div>
</div>

<div class="row">
	<div class="mb-4" id="dp">
		@*<div class="row mb-3">
			<div class="col-12 col-sm-6">
				<label>From Date</label>
				<input class="form-control" type="date" id="fromDate" onchange="Test()" />
			</div>
			<div class="col-12 col-sm-6">
				<label>To Date</label>
				<input class="form-control" type="date" id="toDate" onchange="Test()" />
			</div>
		</div>*@
		<canvas id="dailyChart"></canvas>
	</div>
	<div class="col-12 col-md-8 mb-4">
		<ul class="list-group list-group-horizontal-sm">
			<li class="list-group-item" onclick="yearGraph()" id="yd">Yearly</li>
			<li class="list-group-item bg-primary text-light" onclick="monthGraph()" id="md">Monthly</li>
		</ul>
		<canvas id="yearlyLine"></canvas>
		<canvas id="monthlyLine"></canvas>
	</div>
	<div class="col-12 col-md-4 mb-4">
		<canvas id="doughnutChart"></canvas>
		<h5 class="mt-2 text-center">Revenue by Category</h5>
	</div>

</div>

<style>
	.info-card {
		height: 150px;
		border-radius: 10px;
	}

	#yearlyLine {
		display: none;
	}

	#dailyLine {
		display: none;
	}
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@section Scripts {
	<script src="~/js/Dashboard.js"></script>
}
